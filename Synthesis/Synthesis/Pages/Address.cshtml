@page
@model WebApp.Pages.AddressModel
@{
    ViewData["Title"] = "Order placing";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-4 bg-white m-auto">
            <h2 class="text-center pt-3">Address</h2>

            <form method="post" class="py-3">

                <div class="input-group mb-3">
                    <input type="text" asp-for="AddressVM.Country" class="form-control" placeholder="Country">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="AddressVM.Country"></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="text" asp-for="AddressVM.City" class="form-control" placeholder="City">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="AddressVM.City"></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="text" asp-for="AddressVM.PostalCode" class="form-control" placeholder="Postal Code">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="AddressVM.PostalCode"></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="text" asp-for="AddressVM.Street" class="form-control" placeholder="Street">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="AddressVM.Street"></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="text" asp-for="AddressVM.Number" class="form-control" placeholder="Number">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="AddressVM.Number"></span>
                    </div>
                </div>
               
                <div>
                    <h2 class="text-center pt-3">Date</h2>
                </div>

                <div class="input-group mb-3">
                    <input asp-for="OrderDate" class="form-control" value="@DateTime.Now" placeholder="Date (dd/mm/yyyy)">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="OrderDate"></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <select asp-for="Hour" class="form-select" aria-label="Hour">
                        <option selected value="9">9</option>
                        <option value="10">10</option>
                        <option value="11">11</option>
                        <option value="12">12</option>
                        <option value="13">13</option>
                        <option value="14">14</option>
                        <option value="15">15</option>
                        <option value="16">16</option>
                        <option value="17">17</option>
                        <option value="18">18</option>
                        <option value="19">19</option>
                        <option value="20">20</option>
                    </select>
                </div>

                <div class="input-group mb-3">
                    <select asp-for="Minutes" class="form-select" aria-label="Minutes">
                        <option selected value="00">00</option>
                        <option value="15">15</option>
                        <option value="30">30</option>
                        <option value="45">45</option>
                    </select>
                </div>

                <div class="d-grid py-3">
                    <button type="submit" value="submit" class="btnc my-1">Submit</button>
                </div>

            </form>

        </div>
    </div>
</div>
