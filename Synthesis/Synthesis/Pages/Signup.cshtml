@page
@model WebApp.Pages.SignupModel
@{
    ViewData["Title"] = "Signup";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-4 bg-white m-auto rounded-top rounded-bottom wrapper">
            <h2 class="text-center pt-3">Signup Now</h2>
            <p class="text-center text-muted lead">It's free and takes a minute</p>

            <form method="post" class="py-3">
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                        </svg>
                    </span>
                    <input type="text" asp-for="UserVM.Username" class="form-control" placeholder="Username">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="UserVM.Username"></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        </svg>
                    </span>
                    <input type="text" asp-for="UserVM.FirstName" class="form-control" placeholder="First Name">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="UserVM.FirstName"></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        </svg>
                    </span>
                    <input type="text" asp-for="UserVM.LastName" class="form-control" placeholder="Last Name">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="UserVM.LastName"></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                            <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z" />
                        </svg>
                    </span>
                    <input type="email" asp-for="UserVM.Email" class="form-control" placeholder="Email">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="UserVM.Email"></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                        </svg>
                    </span>
                    <input type="password" asp-for="UserVM.Password" class="form-control" placeholder="Password">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="UserVM.Password"></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z" />
                        </svg>
                    </span>
                    <input type="password" asp-for="UserVM.ConfirmPassword" class="form-control" placeholder="Confirm Password">
                    <div class="input-group mb-auto">
                        <span asp-validation-for="UserVM.ConfirmPassword"></span>
                    </div>
                </div>
                <div class="d-grid py-3">
                    <button type="submit" value="submit" class="btnc my-1">Signup</button>
                    <p class="text-center">
                        Alerady have an account? <a asp-page="/Login">Login here</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>